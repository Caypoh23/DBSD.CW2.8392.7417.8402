@model DBSD.CW2._8392._7417._8402.Models.PatientCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-3">Edit Patient №@Html.DisplayFor(model => model.Id)</h1>
@{
    if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @Html.DisplayFor(model => model.ErrorMessage)
        </div>
    }

}
<div class="patient-card">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="form-group col-6">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="DoB" class="control-label"></label>
            <input asp-for="DoB" class="form-control" />
            <span asp-validation-for="DoB" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Occupation" class="control-label"></label>
            <input asp-for="Occupation" class="form-control" />
            <span asp-validation-for="Occupation" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Gender" class="control-label"></label>
            @Html.DropDownList("Gender",
    Html.GetEnumSelectList<Gender>(), new { @class = "form-control" })
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="PhotoUpload" class="control-label"></label>
            <input asp-for="PhotoUpload" class="form-control import-file" />
            <span asp-validation-for="PhotoUpload" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="RegisteredDate" class="control-label"></label>
            <input asp-for="RegisteredDate" class="form-control" />
            <span asp-validation-for="RegisteredDate" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="DiagnoseId" class="control-label"></label>
            <select asp-for="DiagnoseId" class="form-control" asp-items="Model.Diagnoses">
                <option value="">Please specify diagnose</option>
            </select>
            <span asp-validation-for="DiagnoseId" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="DoctorId" class="control-label"></label>
            <select asp-for="DoctorId" class="form-control" asp-items="Model.Doctors">
                <option value="">Please select doctor</option>
            </select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="WardId" class="control-label"></label>
            <select asp-for="WardId" class="form-control" asp-items="Model.Wards">
                <option value="">Please select ward</option>
            </select>
            <span asp-validation-for="WardId" class="text-danger"></span>
        </div>
        <div class="form-group form-check col-6">
            <label class="form-check-label pl-3">
                <input class="form-check-input" asp-for="EmergencyHospitalization" /> @Html.DisplayNameFor(model => model.EmergencyHospitalization)
            </label>
        </div>
        <div class="form-group form-check col-6">
            <label class="form-check-label pl-3">
                <input class="form-check-input" asp-for="IsDischarged" /> @Html.DisplayNameFor(model => model.IsDischarged)
            </label>
        </div>

        <div class="form-group col-12">
            <input type="submit" value="Save" class="btn our-btn" />
        </div>
        </div>
</form>
    </div>

<div class=" mt-3">
    <a asp-action="Filter" class="btn btn-secondary rounded-0">Back to List</a>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
